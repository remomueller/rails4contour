<%= render partial: 'contour/layouts/per_page', locals: { type: 'items', per_page: 20, object_count: @items.total_count } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'items.name', 'Name', 'items_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'items.description', 'Description', 'items_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'items.user_id', 'User', 'items_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'items.bought_date', 'Bought Date', 'items_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= link_to item.user.name, item.user if item.user %></td>
      <td><%= item.bought_date %></td>
      <td>
        <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-mini' %>
        <%= link_to 'Delete', item, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Item #{item.name}?" } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @items, theme: 'contour' %></div>
